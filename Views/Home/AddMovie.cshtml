@{
    ViewBag.Title = "Add A New Movie";
}

@model JoelHiltonFilmCollection.Models.Movie

<form class="w-25 p-3" asp-action="AddMovie" method="post">
    <div class="form-group">
        <label asp-for="Title">Movie Title:</label>
        <input class="form-control" type="text" name="Title" asp-for="Title" required/>
    </div>
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <input class="form-control" type="text" name="Category" asp-for="Category" required/>
    </div>
    <div class="form-group">
        <label asp-for="Year">Year:</label>
        <input class="form-control" type="text" name="Year" asp-for="Year" required/>
    </div>
    <div class="form-group">
        <label asp-for="Director">Director:</label>
        <input class="form-control" type="text" name="Director" asp-for="Director" required/>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating:</label>
        <select class="form-control" name="Rating" id="Rating" asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NR">NR</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edited">Edited?</label>
        <input type="checkbox" name="Edited" asp-for="Edited"/>
    </div>
    <div class="form-group">
        <label asp-for="Lent">Lent To:</label>
        <input class="form-control" type="text" name="Lent" asp-for="Lent"/>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes:</label>
        <textarea class="form-control" asp-for="Notes" maxlength="25">Type Notes Here...</textarea>
    </div>
    <button class="btn btn-success" type="submit">Add to List</button>
</form>
